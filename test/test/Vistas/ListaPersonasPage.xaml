<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="test.Vistas.ListaPersonasPage">

    <StackLayout 
        Orientation="Vertical"
        HorizontalOptions="FillAndExpand" 
        VerticalOptions="FillAndExpand" 
        BindingContext="{Binding ListaView}">
               
        <ListView
            BackgroundColor="Red"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshComando}"
            IsRefreshing="{Binding Refrescando, Mode=TwoWay}"
            ItemsSource="{Binding Lista}"
            HasUnevenRows="False"
            SeparatorVisibility="None"           
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Fill">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Fill">
                        <Label Text="{Binding Nombre}" TextColor="Black"/>
                    </Frame>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
            Command="{Binding EditarPageComando}"
            HorizontalOptions="Center"
            Text="Editar"
            VerticalOptions="Start"/>

    </StackLayout>
</ContentPage>